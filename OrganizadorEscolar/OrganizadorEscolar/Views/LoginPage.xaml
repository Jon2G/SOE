                                Command="{Binding LoginCommand}"/>-->

                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                    <Switch OnColor="Yellow" ThumbColor="White" />
                    <Label Text="Recuérdame" TextColor="White" FontFamily="KarlaSB"  FontSize="18" FontAttributes="Bold" />
                </StackLayout>

                <Button Margin="10,0"  VerticalOptions="FillAndExpand" FontSize="20" CornerRadius="20" 
                            Text="Iniciar sesión"  FontFamily="KarlaSB" BackgroundColor="Yellow" TextColor="#080821"
                            Command="{Binding LoginCommand}"/>
                <!--<Button  Text="&#xF230;" FontFamily="FontIcon" TextColor="#3b5998" FontSize="30"
