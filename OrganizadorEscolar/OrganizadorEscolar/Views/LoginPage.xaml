                <Label BackgroundColor="White"  Text="&#xE800;" FontFamily="FontIcon" Grid.Column="1"
                            TextColor="IndianRed" FontSize="30" Margin="10"
                            HorizontalOptions="Center" />

                <StackLayout Orientation="Horizontal" VerticalOptions="End"  HorizontalOptions="FillAndExpand">
                    <Label FontFamily="Karla_SemiBold"  TextColor="WhiteSmoke"  TextDecorations="Underline" Text="No tengo cuenta" FontSize="18" HorizontalOptions="Start"/>
                    <Label FontFamily="Karla_SemiBold" TextColor="WhiteSmoke" TextDecorations="Underline" Text="Olvide mi contraseña" FontSize="18" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
            </StackLayout>

