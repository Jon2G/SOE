<?xml version="1.0" encoding="utf-8" ?>
<pages:BasePopUp  xmlns:pages="clr-namespace:Kit.Forms.Pages;assembly=Kit.Forms"
                  xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SOE.Views.PopUps.SubjectPopUp"            
             xmlns:viewModels="clr-namespace:SOE.ViewModels.Pages;assembly=SOE"
             xmlns:scheduler="clr-namespace:SOE.Models.Scheduler;assembly=SOE"
             xmlns:SOEWeb.Shared="clr-namespace:SOEWeb.Shared;assembly=SOEWeb.Shared"
             xmlns:popUps="clr-namespace:SOE.ViewModels.PopUps;assembly=SOE"
             x:DataType="popUps:SubjectSelectorPopUpViewModel" x:Name="Me">
    <Frame Margin="20" CornerRadius="15" 
           VerticalOptions="Center" HorizontalOptions="Center" >
        <CollectionView ItemsSource="{Binding Subjects}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="SOEWeb.Shared:Subject">
                    <ContentView>
                        <Frame Margin="3"  
                                CornerRadius="10" BackgroundColor="{Binding Converter={x:StaticResource SubjectColorAppThemeConverter }}">
                            <Label  FontFamily="Karla_SemiBold" 
                                    Text="{Binding Name}"
                                     FontSize="14"  FontAttributes="Bold">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Modelo.ClosePopUpCommand,Source={x:Reference Me}}" 
                                        CommandParameter="{Binding .}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </Frame>
                    </ContentView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </Frame>
</pages:BasePopUp>