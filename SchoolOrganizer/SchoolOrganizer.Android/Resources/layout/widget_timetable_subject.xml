<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:cardview="http://schemas.android.com/apk/res-auto"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      app:cardCornerRadius="5dp"
      app:cardElevation="5dp"
        android:id="@+id/widget_timetable_item"
        android:layout_width="match_parent"
        android:theme="@style/Theme.Widgets"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="3dp"
        android:foreground="?android:attr/selectableItemBackground"
      android:layout_height="wrap_content"
        android:orientation="horizontal">
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <FrameLayout
                android:id="@+id/widget_timetable_SubjectColor"
                android:background="?colorAccent"
                android:layout_width="10dp"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_timetable_TextViewSubjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Empty"
                    android:textColor="?colorOnSecondary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_timetable_TextViewSubjectTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4:00-5:30"
                    android:textSize="12sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/widget_timetable_TextViewSalon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7CV14"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
</FrameLayout>

