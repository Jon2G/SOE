<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:auto="http://schemas.android.com/apk/res-auto">
  <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
    <!-- If you want to override anything you can do that here. -->
    <!-- Underneath are a couple of entries to get you started. -->
    
    <!-- Set theme colors from https://aka.ms/material-colors -->
    <!-- colorPrimary is used for the default action bar background -->

    <item name="android:textColor">@color/darkTextColor</item>
    <item name="colorPrimary">@color/primaryColor</item>
    <!--colorPrimaryDark is used for the status bar-->
    <item name="colorPrimaryDark">@color/primaryDarkColor</item>
    <!--colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets-->
    <item name="colorAccent">@color/secondaryColor</item>
    <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
  </style>



  <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/secondaryColor</item>
    <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
  </style>

  <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">@color/secondaryColor</item>
    <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
  </style>
  
  <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:headerBackground">@color/primaryLightColor</item>
  </style>

  <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
    <item name="colorAccent">@color/secondaryColor</item>
    <item name="android:timePickerMode">clock</item>
    <item name="android:headerBackground">@color/primaryLightColor</item>
  </style>

  <style name="SplashTheme" parent="MainTheme.Base">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowFullscreen">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBar">true</item>
  </style>




</resources>