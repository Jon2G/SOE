<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:magicGradients="clr-namespace:MagicGradients;assembly=MagicGradients"
             xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             mc:Ignorable="d"
             xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             xmlns:viewModels="clr-namespace:SchoolOrganizer.ViewModels.Pages;assembly=SchoolOrganizer"
             x:Class="SchoolOrganizer.Views.Pages.LoginPage" BackgroundColor="#080821"
             Shell.NavBarIsVisible="False" x:DataType="{x:Type viewModels:LoginViewModel}">
    <ContentPage.Content>
        <Grid>
          
            <StackLayout Padding="10" VerticalOptions="Center" HorizontalOptions="FillAndExpand"
                         Margin="20,10">
                <Label TextColor="White" FontFamily="KarlaSB" Text="Organizador Escolar" Margin="10" FontSize="25" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
                <Image HeightRequest="70" Source="icon" />
                <Label TextColor="White" FontFamily="KarlaSB" Text="¡Bienvenido!" FontSize="25" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
                <StackLayout>

                    <input:AdvancedEntry  Margin="0,10"  Placeholder="Usuario" PlaceholderColor="Gray"  FontFamily="Karla"  TextFontSize="20"  Text="{Binding User}" TextColor="Black"  />

                    <input:AdvancedEntry  Margin="0,10"  Placeholder="Contraseña" PlaceholderColor="Gray"  FontFamily="Karla" IsPassword="True" TextFontSize="20" Text="{Binding Password}" TextColor="Black" />
                    <!--<Button VerticalOptions="Center" FontSize="20"
                                Text="Iniciar sesión"  FontFamily="KarlaSB" BackgroundColor="#22AECE" TextColor="Black"
                                Command="{Binding LoginCommand}"/>-->

                </StackLayout>

                <StackLayout Orientation="Horizontal" HorizontalOptions="Center">

                    <Switch OnColor="Aquamarine" ThumbColor="White" />
                    <Label Text="Recuérdame" TextColor="White" FontFamily="KarlaSB"  FontSize="18" FontAttributes="Bold" />
                </StackLayout>

                <Button Margin="10,0"  VerticalOptions="FillAndExpand" FontSize="20" CornerRadius="20" 
                            Text="Iniciar sesión"  FontFamily="KarlaSB" BackgroundColor="Aquamarine" TextColor="#080821"
                            Command="{Binding LoginCommand}"/>
                <!--<Button  Text="&#xF230;" FontFamily="FontIcon" TextColor="#3b5998" FontSize="30"
                                HorizontalOptions="Center" BackgroundColor="GhostWhite"/>-->
                <Button Margin="10,0" ImageSource="FiPrint.png"   x:Name="AuthButton"  HorizontalOptions="Fill" 
                        BackgroundColor="Aquamarine" TextColor="#080821"  CornerRadius="20" Command="{Binding FingerCommand}"/>

                <StackLayout Orientation="Horizontal" VerticalOptions="End"  HorizontalOptions="FillAndExpand">
                    <Label FontFamily="Karla_SemiBold"  TextColor="WhiteSmoke"  TextDecorations="Underline" Text="No tengo cuenta" FontSize="18" HorizontalOptions="Start" >
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RegisterCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                        <Label FontFamily="Karla_SemiBold" TextColor="WhiteSmoke" TextDecorations="Underline" Text="Olvide mi contraseña" FontSize="18" HorizontalOptions="EndAndExpand"/>
                </StackLayout>
            </StackLayout>

            <!--</pancakeView:PancakeView>-->
        </Grid>
    </ContentPage.Content>
</ContentPage>